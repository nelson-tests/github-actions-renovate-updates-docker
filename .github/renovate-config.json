{
  "extends": ["config:base"],
  "enabledManagers": ["dockerfile", "docker-compose"],
  "dockerfile": {
    "enabled": true,
    "fileMatch": ["(^|/)(Dockerfile)$"]
  },
  "docker-compose": {
    "enabled": true,
    "fileMatch": ["(^|/)(docker-compose\\.yml|docker-compose\\.[a-zA-Z0-9_-]+\\.yml)$"]
  },
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "groupName": null,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": false,
      "automergeStrategy": "none",
      "labels": ["docker-update", "requires-review"]
    },
    {
      "matchManagers": ["docker-compose"],
      "groupName": null,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": false,
      "automergeStrategy": "none",
      "labels": ["docker-compose-update", "requires-review"]
    }
  ]
}
