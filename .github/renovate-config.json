{
  "extends": ["config:base"],
  "managers": {
    "dockerfile": {
      "enabled": true,
      "fileMatch": [
        "(^|/)(Dockerfile)$"
      ]
    },
    "docker-compose": {
      "enabled": true,
      "fileMatch": [
        "(^|/)(docker-compose\\.yml|docker-compose\\.[a-zA-Z0-9_-]+\\.yml)$"
      ]
    }
  },
  "packageRules":
  [
    {
      "matchDatasources": ["docker"],
      "groupName": null,
      "updateTypes": ["major", "minor", "patch"],
      "automerge": false,
      "automergeStrategy": "none",
      "labels": ["docker-update", "requires-review"]
    },
    {
      "matchManagers": ["docker-compose"],
      "groupName": null,
      "updateTypes": ["major", "minor", "patch"],
      "automerge": false,
      "automergeStrategy": "none",
      "labels": ["docker-compose-update", "requires-review"]
    }
  ]
}
